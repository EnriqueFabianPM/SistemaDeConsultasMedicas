<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - App</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/Layout.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/SistemaDeConsultasMedicas.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

        <style>
            .d-flex {
                gap: 15px;
            }
        </style>
    </head>
    <body>
        <div>
            <header id="layout" v-cloak>
            <nav class="navbar navbar-expand-lg shadow-sm custom-navbar">
                <div class="container-fluid justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <a class="navbar-brand fw-bold fs-4 text-primary" asp-area="" asp-controller="Home" asp-action="Login">
                            <i class="fas fa-stethoscope me-2"></i>Consultas Médicas
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="navbarContent" v-if="Authorization.Success">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link" @@click="Index(user?.id_User)">Inicio</a></li>
                            <li class="nav-item" v-if="user?.fk_Role === 1"><a class="nav-link" @@click="Users(user?.id_User)">Usuarios</a></li>
                            <li class="nav-item"><a class="nav-link" @@click="Appointments(user?.id_User)">Citas</a></li>
                        </ul>
                        <div class="d-flex align-items-center gap-2" v-if="Authorization.Success">
                            <span class="text-dark">Bienvenido, <strong>{{user?.email}}</strong></span>
                            <button class="btn btn-outline-primary btn-sm" v-on:click="logout()">Cerrar sesión</button>
                        </div>
                    </div>
                </div>
            </nav>

            </header>
            <div id="app" v-cloak class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://unpkg.com/vue@3/dist/vue.global.js" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script >
            window.callApiAsync = '@Url.Action("ConsumeApi", "Home")';
            window.login = '@Url.Action("Login", "Home")';
            window.appointments = '@Url.Action("Appointments", "Home")';
            window.users = '@Url.Action("Users", "Home")';
            window.index = '@Url.Action("Index", "Home")';
        </script>
        @await RenderSectionAsync("scripts", required: false)
    </body>
</html>